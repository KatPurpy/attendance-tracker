@model AttendanceTracker.Models.API.APIGroup

@{
    ViewData["Title"] = "View";
    var dbCtx = ViewBag.DbCtx as DbCtx;
}

<h1>View</h1>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="groupForm">
                    <input id="CurrentGroupID" type="hidden" asp-for="Id" />
                
                    <label asp-for="Name"></label>
                    <input id="CurrentGroupName" asp-for="Name"/>
                    <span asp-validation-for="Name"></span>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" onclick="ChangeGroup()" type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script>
    function convertFormToJSON(form) {
        const array = $(form).serializeArray(); // Encodes the set of form elements as an array of names and values.
        const json = {};
        $.each(array, function () {
            json[this.name] = this.value || "";
        });
        return JSON.stringify(json);
    }

    function CreateGroup()
    {
        let formData = convertFormToJSON("#groupForm");
        console.log(formData);
        $.ajax({
            type: "POST",
            url: "/api/Group/Create",
            contentType: "application/json",
            dataType: "json",
            data: formData,
            success: () => {
                location.reload();
            }
        });
    }

    function ChangeGroup()
    {
        let formData = convertFormToJSON("#groupForm");
        console.log(formData);
        $.ajax({
            type: "POST",
            url: "/api/Group/Update?id=" + $("#CurrentGroupID").val(),
            contentType: "application/json",
            dataType: "json",
            data: formData,
            success: ()=>{
                location.reload();
            }
        });
    }
    function LoadGroup(id)
    {
        $.ajax({
            type: "GET",
            url: "/api/Group/Read",
            data: {id},
            success: function(result)
            {
                $("#CurrentGroupID").val(result.id);
                $("#CurrentGroupName").val(result.name);
            }
        });
    }
</script>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in dbCtx.Groups.OrderBy(g=>g.Name)) {
        <tr>
            <td>
                @item.Name
            </td>
            <td class="border border-danger border-2">
                    <!-- Button trigger modal -->
                    <button type="button" onclick="LoadGroup(@item.Id)" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                        Edit
                    </button>
                <a asp-action="Details" asp-route-id="@item.Name">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Name">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
