<!DOCTYPE html>
<html lang="en" style="height:100%">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AttendanceTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AttendanceTracker.styles.css" asp-append-version="true" />

    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body style="height:100%">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    
    <header>
        @if (User.IsInRole("Teacher"))
        {
            <a href="~/Group">Groups</a>
        }

        @if (User.IsInRole("Administrator"))
        {
            <a href="~/Admin">Admin panel</a>
        }

        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a href="Login/Logout">Logout</a>
            <span>@User.Identity.Name - @(User.IsInRole("Teacher") ? "Teacher" : (User.IsInRole("Administrator") ? "Admin" : ""))</span>
        }
    </header>
    
    <hr />


    <div class="container">
        <main style="height:100%" role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <hr />
    AttendanceTracker
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
